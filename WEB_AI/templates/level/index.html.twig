{% extends'baseFront.html.twig' %}
{% block body %}
<br><br><br>
<section id="services" class="section-bg">
            <div class="container" data-aos="fade-up">

                <header class="section-header">
                    <h3>Please Select Your Level</h3>
                </header>

                <div class="row row-eq-height justify-content-center">
{% for level in levels %}
                    <div class="col-lg-4 mb-4">
                        <div class="card" data-aos="zoom-in" data-aos-delay="100">
                            <i class="bi bi-calendar4-week"></i>
                            <div class="card-body">
                                <h5 class="card-title">{{ level.title }}</h5>
                                <p class="card-text">If you select this level, you will find the quizz available for it. Have a nice experience.</p>
                                <a href="{{ path('app_level_show', {'id': level.id}) }}">show</a>
                            </div>
                        </div>
                    </div>
{% endfor %}
                </div>
            </div>
        </section><!-- End Why Us Section -->
    
{% endblock %}